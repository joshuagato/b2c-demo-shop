<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/schema-01.xsd">

    <!-- Book Transfer Object -->
    <transfer name="Book">
        <property name="idBook" type="int" />
        <property name="name" type="string" />  
        <property name="description" type="string" />
        <property name="publicationDate" type="DateTime" />
    </transfer>

    <!-- DateTime Transfer Object -->
    <transfer name="DateTime">
        <property name="date" type="string" />
        <property name="timezone" type="string" />
    </transfer>

</transfers>
