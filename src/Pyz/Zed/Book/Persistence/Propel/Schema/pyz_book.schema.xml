<?xml version="1.0"?>
<database name="zed"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
    namespace="Orm\Zed\Book\Persistence"
    package="src.Orm.Zed.Book.Persistence">

    <table name="pyz_book" idMethod="native">
        <column name="id_book" required="true" type="INTEGER" autoIncrement="true" primaryKey="true" />
        <column name="name" required="true" size="255" type="VARCHAR" />
        <column name="description" required="true" size="1024" type="LONGVARCHAR" />
        <column name="publication_date" type="TIMESTAMP" required="true"/>
    </table>
</database>